# ======================
# DATABASE CONFIGURATION
# ======================

# MongoDB connection string
# For MongoDB Atlas: mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/reaction
DB_URL="mongodb+srv://<user>:<db_password>@<host>/?appName=<app_name>"

# ======================
# AUTHENTICATION & SECURITY
# ======================

# Secret key for JWT token signing (use a long, random string)
SUPER_SECRET="<your_super_secret>"

# Admin account credentials (created on first server start)
ADMIN_EMAIL="<your_admin_email>"
ADMIN_PASSWORD="<your_admin_password>"

# Google OAuth 2.0 Client ID (from Google Cloud Console)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="<your_google_client_id_here>"

# ======================
# SERVER CONFIGURATION
# ======================

# Port number for the Express server
PORT=5000

# Node environment: "development" or "production"
# In production, serves frontend static files and enables optimizations
NODE_ENV="development"

# Frontend URLs
FRONTEND_BASE_URL="http://localhost:5173"

# Public API base URL (used in email links)
BACKEND_BASE_URL="http://localhost:5000/api/v1"

# ======================
# EMAIL CONFIGURATION (SMTP)
# ======================

# SMTP server hostname (e.g., smtp.gmail.com, smtp-mail.outlook.com)
SMTP_HOST="<your_smtp_host>"

# SMTP port (usually 587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT="<your_smtp_port>"

# Use secure connection (true for SSL, false for TLS/STARTTLS)
SMTP_SECURE="<true_or_false>"

# SMTP authentication username (often the email address)
SMTP_USER="<your_smtp_user>"

# SMTP authentication password (or app-specific password for Gmail)
SMTP_PASS="<your_smtp_pass>"

# Email address to send from (must match SMTP_USER for most providers)
SMTP_FROM="<your_smtp_from>"

# ======================
# EXAMPLE CONFIGURATIONS
# ======================

# Gmail Example:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-specific-password"  # Enable 2FA and create app password
# SMTP_FROM="your-email@gmail.com"

# Outlook/Hotmail Example:
# SMTP_HOST="smtp-mail.outlook.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@outlook.com"
# SMTP_PASS="your-password"
# SMTP_FROM="your-email@outlook.com"

# SendGrid Example:
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"
# SMTP_FROM="noreply@yourdomain.com"

# ======================
# PRODUCTION NOTES
# ======================

# For production deployment:
# 1. Set NODE_ENV="production"
# 2. Use production MongoDB connection string
# 3. Update FRONTEND_URL, FRONTEND_BASE_URL, and PUBLIC_BASE_URL to production URLs
# 4. Use strong, unique SUPER_SECRET (generate with: openssl rand -base64 32)
# 5. Secure your SMTP credentials
# 6. Build frontend before starting: npm run build:frontend

